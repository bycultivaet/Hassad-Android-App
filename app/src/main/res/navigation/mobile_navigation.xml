<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_survey">

    <fragment
        android:id="@+id/navigation_survey"
        android:name="com.cultivaet.hassad.ui.main.survey.SurveyFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_survey" />

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.cultivaet.hassad.ui.main.tasks.TasksFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_tasks" />

    <fragment
        android:id="@+id/navigation_farmers"
        android:name="com.cultivaet.hassad.ui.main.farmers.FarmersFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_farmers">
        <action
            android:id="@+id/action_farmersFragment_to_addFarmerFragment"
            app:destination="@id/navigation_add_farmer" />
    </fragment>

    <fragment
        android:id="@+id/navigation_content"
        android:name="com.cultivaet.hassad.ui.main.content.ContentFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_content" />

    <fragment
        android:id="@+id/navigation_add_farmer"
        android:name="com.cultivaet.hassad.ui.main.addfarmer.AddFarmerFragment"
        android:label="@string/addFarmer"
        tools:layout="@layout/fragment_add_farmer" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.cultivaet.hassad.ui.main.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>